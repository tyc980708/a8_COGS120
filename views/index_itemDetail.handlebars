<html>
	<head>
 		<title>Item Detail</title>
 		<meta charset="utf-8">
 		<meta name="viewport" content="width=device-width, initial-scale=1.0">
 		<link href="/css/bootstrap.css" rel="stylesheet">
 		<link href="/css/bootstrap-theme.css" rel="stylesheet">
 		<link href="/css/index_itemDetail.css" rel="stylesheet">

 		<!-- Use internet source for icons-->
 		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

		<script>var i = location.href.substring(location.href.indexOf("?")+1);
	  console.log(i);</script>
	</head>

	<body>

 		<div class = "container">
 			<div id="myHeader" class="header">
 				<table>
 					<td><div class="topIcon"><a href="./buyer_home"><i class="material-icons" style="font-size:50px;">backspace</i></a></div></td>
 					<td><h2>Details</h2></td>
 				</table>
 			</div>

 			<div class="details">
			<div id="box">
 			<table>
 				<td>
 					<div id="itemPic"><img src={{imageURL}}></div>
					<!--<a href="buyer_itemPhotos">more photos ...</a>-->
 				</td>
 				<td>
 					<table>
					<tr>
      					<td colspan="2">
      						<h4 class = "item_name">{{name}}</h4>
      					</td>
      					<td></td>
      				</tr>
      				<tr>
      					<td>
      						<p><Strong>Price: </strong>{{price}}</p>
      						<p><Strong>Distance: </Strong>{{distance}}</p>
      					</td>
      					<td>
      						<p><Strong>Seller Rating: </Strong>{{sellerRating}}</p>
      						<p><Strong>Pickup Time: </Strong>{{pickupTime}}</p>
      					</td>
      				</tr>
					</table>
 				</td>
 			</table>
			</div>

			<hr>


 			<table>
 				<td>
 					<h3 class="info">Offered by</h3>
					<p class="text">{{seller}}</p>
 				</td>
 				<td id="callAndText">
 					<i class="material-icons" style="font-size:50px;">call</i>
 					<i class="material-icons" style="font-size:50px;">textsms</i>
 				</td>
 			</table>

 			<table>
 				<td>
 					<h3 class="info">Pickup at</h3>
 					<p class="text">{{pickupLocation}}</p>
 				</td>
 				<td>
 					<div class="topIcon"><i class="material-icons" style="font-size:50px;">location_on</i></div>
 				</td>
 			</table>

 			<h3 class="info">Pickup Time</h3>
			<p class="text">{{pickupTime}}</P>


 			<h3 class="info">Come and Learn to Cook This Item Allowed</h3>
			<p class="text">{{learn}}</p>

 			<h3 class="info">Description</h3>
 			<p class="text">{{description}}</p>

			<div id="myFooter" class="footer">

			<hr>

			<!-- <table>
 				<th>
 					Number of Ordering:
 				</th>
 				<td>
 					<i class="material-icons" style="font-size:50px;">chevron_left</i>
 				</td>
 				<td>
 					01
 				</td>
 				<td>
 					<i class="material-icons" style="font-size:50px;">chevron_right</i>
 				</td>
 			</table> -->

 			<table>
 				<td id="total">
 					TOTAL PRICE:
 					<strong>{{price}}</strong>
 				</td>
 				<td>
        <form id="placeOrder" role="form" method="get" action="/order">
 					<input type="submit" id="submitBtn" class="btn btn-default" value="PLACE ORDER"></input>
				</form>
 				</td>
 			</table>

			<br>
			</div>

 			</div>

 		</div>

 	<script src="/js/jquery-1.11.0.js"></script>
 	<script src="/js/bootstrap.js"></script>
 	<script src="/js/userHome.js"></script>
	</body>
</html>
